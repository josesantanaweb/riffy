{
  "name": "@riffy/components",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./styles/globals.css": "./src/styles/globals.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "build": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "check-types": "tsc --noEmit",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@riffy/eslint-config": "workspace:*",
    "@riffy/jest-config": "workspace:*",
    "@riffy/tailwind-config": "workspace:*",
    "@riffy/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "typescript": "5.5.4",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "react-quill": "^2.0.0",
    "date-fns": "^4.1.0",
    "react-hot-toast": "^2.6.0",
    "react-day-picker": "^9.9.0"
  },
  "peerDependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.2.0",
    "framer-motion": "^12.5.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.17",
    "react-dom": "^18.2.0",
    "next": "^14.2.4"
  }
}
